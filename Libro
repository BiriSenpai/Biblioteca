package grupo;

public class Libro {
	private String titulo;
	private String autor;
	private int copias;
	private int copiasPrest;
	
	public String getTitulo() {
		return titulo;
	}
	public void setTitulo(String titulo) {
		this.titulo = titulo;
	}
	
	public String getAutor() {
		return autor;
	}
	public void setAutor(String autor) {
		this.autor = autor;
	}
	
	public int getCopias() {
		return copias;
	}
	public void setCopias(int copias) {
			this.copias = copias;
	}
	
	public int getCopiasprest() {
		return copiasPrest;
	}
	public void setCopiasprest(int copiasPrest) {
		this.copiasPrest = copiasPrest;
	}
	
	public Libro(String titulo, String autor, int copias, int copiasPrest){
		this.titulo = titulo;
		this.autor = autor;
		this.copias = copias;
		this.copiasPrest = copiasPrest;
	}
	
	@Override
	public String toString() {
		return "Titulo: " + titulo
				+ "\nAutor: " + autor 
				+ "\nNúmero de ejemplares: " + copias
				+ "\nNúmero de ejemplares prestados: " + copiasPrest + "\n";
	}
	
}
